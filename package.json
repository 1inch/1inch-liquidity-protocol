    "scripts": {
        "compile": "hardhat --config hardhat-ovm.config.js compile",
        "test": "hardhat test --show-stack-traces",
        "test:ovm": "hardhat --config hardhat-ovm.config.js test --show-stack-traces",
        "clean": "rimraf artifacts cache coverage",
        "deploy": "hardhat deploy --network",
        "deploy:ovm": "hardhat --config hardhat-ovm.config.js deploy --network",
        "coverage": "hardhat coverage",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint . --fix",
        "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
        "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
        "lint": "yarn run lint:js && yarn run lint:sol",
        "lint:fix": "yarn run lint:js:fix && yarn run lint:sol:fix"
